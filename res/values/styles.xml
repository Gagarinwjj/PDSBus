    </style>

    <style name="MyProgerssDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:indeterminateDrawable">@anim/loading</item>
    </style>

    <style name="AnimationFade">
        <item name="android:windowEnterAnimation">@anim/menu_in</item>
